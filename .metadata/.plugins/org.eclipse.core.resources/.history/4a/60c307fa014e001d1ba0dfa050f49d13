package day5;

public class PointSheetRow {
	private String rowID;
	private Examination[] assessments;
	private Subject subject;
	private char subjectGrade;
	private double subjectPoint;

	public PointSheetRow(String rowID, Examination[] assessments, Subject subject) {
		this.rowID = rowID;
		this.assessments = assessments;
		this.subject = subject;
		updateSubjectAveragePoint();
		this.subjectGrade = PointSheetRow.getGrade(subjectPoint);
	}
	
	

	public Examination[] getAssessments() {
		return assessments;
	}



	public Subject getSubject() {
		return subject;
	}



	public char getSubjectGrade() {
		return subjectGrade;
	}



	public double getSubjectPoint() {
		return subjectPoint;
	}

	private void updateSubjectAveragePoint() {
		int divisor = 0;
		double dividend = 0;
		for (Examination assessment : assessments) {
			dividend += assessment.getPoint();
			divisor += assessment.getMultiplication();
		}
		subjectPoint = dividend / divisor;
	}

	public static char getGrade(double point) {
		if (point >= 9)
			return 'S';
		else if (point >= 8)
			return 'A';
		else if (point >= 7)
			return 'B';
		else if (point >= 6)
			return 'C';
		else if (point >= 5)
			return 'D';
		else
			return 'F';
	}
}
