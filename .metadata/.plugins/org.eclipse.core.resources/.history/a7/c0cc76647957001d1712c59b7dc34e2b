package day9;

public class MainDay9 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] array = { 1, 5, 8, 11, 22, 50, 78, 180 };
		int value = 78;
		int indexOfValue = findIndexOf(value, array);
		System.out.println("INDEX OF " + value + " IS : " + indexOfValue);

	}
	
	public static int findIndexOf(int value, int[] arr) {
		for(int i = 0; i < arr.length; i++) {
			if(value == arr[i])
				return i;
			else if(value <  arr[i])
				return -1;
		}
		return -1;
	}
	
	public static int findIndex(int value, int[] arr) {
		int middleIndex = arr.length/2;
		int[] newArr;
		if(value == arr[middleIndex]) {
			return value;
		}else if(value < arr[middleIndex]) {
			newArr = new int[middleIndex];
			for(int i = 0; i < middleIndex; i++) {
				newArr[i] = arr[i];
			}
			return findIndex(value, newArr);
		}else {
			newArr = new int[arr.length - middleIndex];
			for(int i = middleIndex; i < arr.length; i++) {
				newArr[i] = arr[i];
			}
		}
	}

}
