	public static Student getStudent(Student[] students) {
		for (Student s : students) {
			System.out.println("Student ID: " + s.getStudentID() + " | Student Name: " + s.getStudentName());
		}
		while (true) {
			System.out.print("Please enter either Student ID or Student Name you want to view student's Point Sheet: ");
			String studentID = scanner.nextLine();
			for (Student s : students) {
				if (studentID.equalsIgnoreCase(s.getStudentID()) || studentID.equalsIgnoreCase(s.getStudentName())) {
					return s;
				}
			}
			System.out.println("Cannot find the entered Student ID or Student Name in our system. Please try again");
		}
	}

	public static ArrayList<Examination> getExaminationsByStudentID(String studentID, Examination[] exams) {
		ArrayList<Examination> examninations = new ArrayList<Examination>();
		for (Examination e : exams) {
			if (studentID.equalsIgnoreCase(e.getStudentID()))
				examninations.add(e);
		}
		return examninations;
	}
	
	public static ArrayList<Semester> getSemesterByExam(String semesterID, Semester[] sems){
		ArrayList<Semester> semesters = new ArrayList<Semester>();
		for(Semester s : sems) {
			if (semesterID.equalsIgnoreCase(s.getSemesterID()))
				semesters.add(s);
		}
		return semesters;
	}

	public static PointSheet getPointSheet(SemesterPerformance[] performances) {
		String studentID;
		for (SemesterPerformance performance : performances) {
			System.out.println("Student ID: " + performance.getStudent().getStudentID() + " - Student Name: "
					+ performance.getStudent().getStudentName() + " - Student Class: "
					+ performance.getStudent().getStudentClass());
		}
		System.out.print("Please enter either Student ID or Student Name you want to view student's Point Sheet: ");
		studentID = scanner.nextLine();
		for (SemesterPerformance performance : performances) {
			if (studentID.equalsIgnoreCase(performance.getStudent().getStudentID())
					|| studentID.equalsIgnoreCase(performance.getStudent().getStudentName()))
				return performance.getPointSheet();
		}
		System.out.println("Cannot find the entered Student ID or Student Name in our system");
		return null;
	}

	public static void viewPointSheet(PointSheet pointSheet) {
		for (PointSheetRow pointSheetRow : pointSheet.getPointSheetRows()) {
			System.out.println("Subject: " + pointSheetRow.getSubject().getSubjectName());
			for (Examination examination : pointSheetRow.getAssessments()) {
				System.out.println("Exam: " + examination.getExamTitle() + " - Point: " + examination.getPoint()
						+ " - Multiplication: " + examination.getMultiplication());
			}
			System.out.println("Average Point: " + pointSheetRow.getSubjectPoint());
			System.out.println("Average Grade: " + pointSheetRow.getSubjectGrade());
		}
	}

