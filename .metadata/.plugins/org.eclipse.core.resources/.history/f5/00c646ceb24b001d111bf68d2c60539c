
public class Order {
	private String orderID;
	private String orderDate;
	private OrderDetail[] orderDetails;
	private User customer;

	public Order(String orderID, String orderDate, OrderDetail[] orderDetails, User customer) {
		this.orderID = orderID;
		this.orderDate = orderDate;
		this.orderDetails = orderDetails;
		this.customer = customer;		
	}

	public String getOrderID() {
		return orderID;
	}

	public String getOrderDate() {
		return orderDate;
	}

	public OrderDetail[] getOrderDetails() {
		return orderDetails;
	}

	public User getCustomer() {
		return customer;
	}
	
	public void addMoreOrderDetail(OrderDetail newDetail) {
		OrderDetail[] newDetails = new OrderDetail[orderDetails.length + 1];
		for (int i = 0; i < orderDetails.length; i++) {
			newDetails[i] = orderDetails[i];
		}
		newDetails[orderDetails.length] = newDetail;
		orderDetails = newDetails;
	}
}
