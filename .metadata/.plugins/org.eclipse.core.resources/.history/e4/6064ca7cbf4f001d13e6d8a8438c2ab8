		Student selectedStudent = getStudent(students);
		if (selectedStudent != null) {
			ArrayList<ExamResult> selectedResults = getExamResultsByStudent(selectedStudent, results);
			for (ExamResult r : selectedResults) {

			}

		}
		scanner.close();
