		ExamResult result3 = new ExamResult("student1", "exam3", 3.0);
		ExamResult result4 = new ExamResult("student1", "exam4", 8.5);
		ExamResult result5 = new ExamResult("student1", "exam5", 10.0);
		ExamResult result6 = new ExamResult("student1", "exam6", 6.5);
		ExamResult[] results = { result1, result2, result3, result4, result5, result6 };
