
public class Cart {
	private String orderID;
	private String orderDate;
	private CartDetail[] orderDetails;
	private Constant.OrderStatus orderStatus;

	public Cart(String orderID, String orderDate, CartDetail[] orderDetails) {
		this.orderID = orderID;
		this.orderDate = orderDate;
		this.orderDetails = orderDetails;	
	}

	public String getOrderID() {
		return orderID;
	}

	public String getOrderDate() {
		return orderDate;
	}

	public CartDetail[] getOrderDetails() {
		return orderDetails;
	}
	
	public void addMoreOrderDetail(CartDetail newDetail) {
		CartDetail[] newDetails = new CartDetail[orderDetails.length + 1];
		for (int i = 0; i < orderDetails.length; i++) {
			newDetails[i] = orderDetails[i];
		}
		newDetails[orderDetails.length] = newDetail;
		orderDetails = newDetails;
	}
}
